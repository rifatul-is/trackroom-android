<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_post_comment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:padding="16dp"
    android:background="?attr/colorOnPrimary"
    android:layout_marginTop="8dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_Profile_Photo_comment_item"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:layout_constraintTop_toTopOf="@+id/layout_post_comment"
        app:layout_constraintStart_toStartOf="@+id/layout_post_comment"
        app:layout_constraintBottom_toBottomOf="@+id/layout_post_comment"
        android:layout_marginLeft="8dp"
        android:src="@drawable/ic_account_circle_200dp" />

    <TextView
        android:id="@+id/comment_userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="65dp"
        android:text="Test User 2"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="@+id/layout_post_comment"
        app:layout_constraintTop_toTopOf="@+id/layout_post_comment"
        app:layout_constraintStart_toEndOf="@+id/img_Profile_Photo_comment_item"/>

    <TextView
        android:id="@+id/post_comment_item"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:layout_marginStart="65dp"
        app:layout_constraintStart_toStartOf="@+id/layout_post_comment"
        app:layout_constraintStart_toEndOf="@+id/img_Profile_Photo_comment_item"
        app:layout_constraintTop_toTopOf="@+id/layout_post_comment"
        android:text="This is a new commentbxsgggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggg"/>



</androidx.constraintlayout.widget.ConstraintLayout>