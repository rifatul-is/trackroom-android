<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_Class_Card"
    android:layout_width="350dp"
    android:layout_height="180dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="10dp"
    app:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lavender"
        android:id="@+id/class_card"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_class_pic"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="centerCrop"
            android:layout_marginLeft="15dp"
            app:layout_constraintStart_toStartOf="@id/item_class_pic"
            app:layout_constraintEnd_toEndOf="@id/item_class_pic"
            app:layout_constraintTop_toTopOf="@id/item_class_pic"
            app:layout_constraintBottom_toBottomOf="@id/item_class_pic"
            android:alpha="0.1"
            android:src="@drawable/activity_launcher_banner" />

        <TextView
            android:id="@+id/item_class_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="27dp"
            android:fontFamily="sans-serif-black"
            android:text="Class 1"
            android:textColor="@color/black"
            android:textSize="28dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/item_class_name"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/item_class_pic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="@id/item_class_name"
            app:layout_constraintTop_toBottomOf="@id/item_class_name"
            android:layout_marginStart="25dp">

            <TextView
                android:id="@+id/item_tv_class_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-black"
                android:text="Public "
                android:textSize="22dp"
                android:textStyle="normal"
                app:layout_constraintStart_toEndOf="@id/item_class_name"
                app:layout_constraintTop_toBottomOf="@id/item_class_name" />

            <TextView
            android:id="@+id/item_course_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
                android:layout_marginStart="5dp"
            android:text=". "
            android:textStyle="normal"
            app:layout_constraintStart_toStartOf="@id/item_class_name"
            android:fontFamily="sans-serif-black"
            android:textSize="22dp"/>

        <TextView
            android:id="@+id/item_tv_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toEndOf="@id/item_course_category"
            android:text="Cooking"
            android:textSize="22dp"
            android:textStyle="normal" />
        </LinearLayout>

        <TextView
            android:id="@+id/item_tv_creator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            android:fontFamily="sans-serif-black"
            android:textColor="@color/black"
            android:text="Name"
            android:textSize="17dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/item_class_name"
            app:layout_constraintTop_toBottomOf="@id/item_class_name" />



    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>